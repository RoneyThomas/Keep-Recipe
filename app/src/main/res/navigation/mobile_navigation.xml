<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.keeprecipes.android.presentationLayer.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_addRecipeFragment"
            app:destination="@id/addRecipeFragment" />
        <action
            android:id="@+id/action_navigation_home_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
        <action
            android:id="@+id/action_navigation_home_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_navigation_home_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_recipe_groups"
        android:name="com.keeprecipes.android.presentationLayer.collections.RecipeGroupsFragment"
        android:label="@string/title_collections"
        tools:layout="@layout/fragment_recipe_groups" />
    <fragment
        android:id="@+id/addRecipeFragment"
        android:name="com.keeprecipes.android.presentationLayer.addRecipe.AddRecipeFragment"
        android:label="Add Recipe"
        tools:layout="@layout/fragment_add_recipe">
        <argument
            android:name="recipeId"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.keeprecipes.android.presentationLayer.searchResult.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <argument
            android:name="searchArg"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.keeprecipes.android.presentationLayer.recipeDetail.RecipeDetailFragment"
        android:label=""
        tools:layout="@layout/fragment_recipe_detail">
        <argument
            android:name="recipeId"
            android:defaultValue="-1"
            app:argType="integer" />
        <action
            android:id="@+id/action_recipeDetailFragment_to_addRecipeFragment"
            app:destination="@id/addRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/cuisineFragment"
        android:name="com.keeprecipes.android.CuisineFragment"
        android:label="fragment_cuisine"
        tools:layout="@layout/fragment_cuisine" />
    <fragment
        android:id="@+id/collectionFragment"
        android:name="com.keeprecipes.android.CollectionFragment"
        android:label="fragment_collection"
        tools:layout="@layout/fragment_collection" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.keeprecipes.android.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>